<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/propper/popper.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Detail_Rider</title>
    <style>
        body {
            background-color: #e3c6e6;
        }
    </style>
</head>

<body>
    <% include navbar %>
        <div class="contanier">
            <div class="row" style="margin-top: 5%; ">
                <div class="col text-center">
                    <h2>
                        <%= RiderT.name%>
                            <%= RiderT.surname%>&emsp;<%= RiderT.phoneNum%>
                    </h2>
                </div>
            </div>
            <div class="row" style="margin-top: 5%;">
                <div class="col text-end">
                    <img src="<%= VerifyRiderT.cardImage %>" class="imgid" style="width: 450px; height: 250px;">
                </div>
                <div class="col text-start" style="padding-left: 11%;">
                    <img src="<%= VerifyRiderT.faceImage %>" class="imgid" style="width: 250px; height: 250px;">
                </div>
            </div>
        </div>
        <% if(verifyStatusIDT == 'VS1'){ %>
        <div class="row mt-5">
            <div class="col text-end">
                <form method="post" id="formSubmit" action="/rider/updateVerifyRider/verified/<%= RiderT.verifyID %>/VS2">
                    <button type="submit" class="pass"
                        style="color: white; background-color: green; border-radius: 10px; border: none; width: 170px; height: 40px;">ผ่านการตรวจสอบ</button>
                </form>
            </div>
            <div class="col text-start">
                <!-- <form method="post" id="formSubmit2" action="/rider/updateStatus/<%= RiderT.verifyID %>/VS3"> -->
                    <button type="button" class="nopass" id="detailcancle"
                        style="color: white; background-color: red; border-radius: 10px; border: none; width: 170px; height: 40px;">ไม่ผ่านการตรวจสอบ</button>
                        <div id="myModal"
                        class="modal"
                        style="margin-top: 10%; width: 700px; height:500px; margin-left: 27%;">

                        <!-- Modal content -->
                        <div
                            class="modal-content">
                            <div
                                class="modal-header">
                                <h4
                                    class="modal-title">
                                    ไม่ผ่านการตรวจสอบ
                                </h4>
                                <span
                                    style="font-size: 30px; font-weight: bold;"
                                    id="close">x</span>
                            </div>
                            <form
                                action="/rider/updateVerifyRider/denied/<%= RiderT.verifyID %>/VS3"
                                method="post">
                                <div
                                    class="modal-body">
                                    <div
                                        class="input-group">
                                        <input
                                            type="text"
                                            id="reason"
                                            name="reason"
                                            class="form-control"
                                            placeholder="เหตุผลไม่ผ่านการตรวจสอบ">
                                    </div>
                                </div>
                                <div
                                    class="modal-footer">
                                    <button
                                        type="submit"
                                        class="btn btn-default"
                                        data-dismiss="modal">Submit</button>
                                </div>
                            </form>
                        </div>

                <!-- </form> -->
            </div>
        </div>
        <% } %>
        <script>
          
            const modal = document.getElementById("myModal");
            const btn = document.getElementById("detailcancle");
            const span = document.getElementById("close");
           

            // When the user clicks the button, open the modal
            btn.onclick = function () {
                modal.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>


</body>

</html>